<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="10dp"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp" >

        <TextView
            android:id="@+id/tvtexttitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1aa881"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Título: " >
        </TextView>

        <TextView
            android:id="@+id/tvtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Título: "
            android:layout_toRightOf="@+id/tvtexttitle" >
        </TextView>

        <TextView
            android:id="@+id/tvtextid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1aa881"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Id: "
            android:layout_below="@+id/tvtitle">
        </TextView>

        <TextView
            android:id="@+id/tvid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Id: "
            android:layout_below="@+id/tvtitle"
            android:layout_toRightOf="@+id/tvtextid" >
        </TextView>

        <TextView
            android:id="@+id/tvtexttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1aa881"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Hora: "
            android:layout_below="@+id/tvtextid" >
        </TextView>

        <TextView
            android:id="@+id/tvtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Hora: "
            android:layout_below="@+id/tvid"
            android:layout_toRightOf="@+id/tvtexttime" >
        </TextView>

        <TextView
            android:id="@+id/tvtexttsunami"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#1aa881"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Tsunami: "
            android:layout_below="@+id/tvtexttime" >
        </TextView>

        <TextView
            android:id="@+id/tvtsunami"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Tsunami: "
            android:layout_below="@+id/tvtime"
            android:layout_toRightOf="@+id/tvtexttsunami" >
        </TextView>

        <TextView
            android:id="@+id/tvtextclick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="Click para localizar el terremoto en el mapa..."
            android:layout_below="@+id/tvtexttsunami" >
        </TextView>

    </RelativeLayout>
</androidx.cardview.widget.CardView>