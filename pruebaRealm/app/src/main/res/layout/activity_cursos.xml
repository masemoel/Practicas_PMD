<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#4CAF50"
    tools:context=".CursosActivity">

    <EditText
        android:id="@+id/editTextDuracionCurso"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Duracion"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/editTextNombreCurso"
        app:layout_constraintStart_toStartOf="@+id/editTextNombreCurso"
        app:layout_constraintTop_toBottomOf="@+id/editTextNombreCurso" />

    <EditText
        android:id="@+id/editTextNombreCurso"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Nombre"
        app:layout_constraintEnd_toEndOf="@+id/editTextID"
        app:layout_constraintStart_toStartOf="@+id/editTextID"
        app:layout_constraintTop_toBottomOf="@+id/editTextID" />

    <EditText
        android:id="@+id/editTextID"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="ID"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/botonAgregarCurso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#4CAF50"
        android:text="Agregar"
        app:layout_constraintEnd_toEndOf="@+id/editTextDuracionCurso"
        app:layout_constraintStart_toStartOf="@+id/editTextDuracionCurso"
        app:layout_constraintTop_toBottomOf="@+id/editTextDuracionCurso" />

    <Button
        android:id="@+id/botonEditaCurso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#673AB7"
        android:text="Editar"
        app:layout_constraintEnd_toEndOf="@+id/botonAgregarCurso"
        app:layout_constraintStart_toStartOf="@+id/botonAgregarCurso"
        app:layout_constraintTop_toBottomOf="@+id/botonAgregarCurso" />

    <Button
        android:id="@+id/botonEliminaCurso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F44336"
        android:text="Eliminar"
        app:layout_constraintEnd_toEndOf="@+id/botonEditaCurso"
        app:layout_constraintStart_toStartOf="@+id/botonEditaCurso"
        app:layout_constraintTop_toBottomOf="@+id/botonEditaCurso" />
</androidx.constraintlayout.widget.ConstraintLayout>