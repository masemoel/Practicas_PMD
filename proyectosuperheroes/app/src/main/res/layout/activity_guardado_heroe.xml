<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuardadoHeroe">

  <ImageView
      android:id="@+id/imagenheroe"
      android:layout_width="148dp"
      android:layout_height="228dp"
      android:layout_marginTop="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_baseline_camera_enhance_24" />

  <TextView
      android:id="@+id/nombreheroe"
      android:layout_width="193dp"
      android:layout_height="47dp"
      android:layout_marginTop="40dp"
      android:gravity="center_horizontal"
      android:textSize="30sp"
      android:text="TextView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imagenheroe" />

  <TextView
      android:id="@+id/alias"
      android:layout_width="143dp"
      android:layout_height="30dp"
      android:layout_marginTop="3dp"
      android:gravity="center_horizontal"
      android:textSize="15sp"
      android:text="TextView"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/nombreheroe" />

  <TextView
      android:id="@+id/biografia"
      android:layout_width="218dp"
      android:layout_height="48dp"
      android:layout_marginTop="36dp"
      android:gravity="center_horizontal"
      android:text="TextView"
      android:textSize="15sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/alias" />

  <TextView
      android:id="@+id/podertitulo"
      android:layout_width="116dp"
      android:layout_height="27dp"
      android:layout_marginTop="28dp"
      android:gravity="center_horizontal"
      android:text="Poder"
      android:textSize="15sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.498"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/biografia" />

  <RatingBar
      android:id="@+id/poderrating"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="12dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/podertitulo" />
</androidx.constraintlayout.widget.ConstraintLayout>